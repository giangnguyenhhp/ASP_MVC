@using ASP_MVC.Models
@model ASP_MVC.Areas.Identity.Models.Account.LoginViewModel
@inject SignInManager<AppUser> SignInManager

@{
    ViewData["Title"] = "Đăng nhập";
    Layout = "_LoginLayout";
}
<style>
    .bg-login-image {
    background-image: url(https://i.pinimg.com/236x/99/d0/c7/99d0c7055e162d936ef2987cc7f43b5b.jpg);
    background-position: center;
    background-repeat: no-repeat;
    background-size:contain;
    background-color:white;
    }
</style>

<!-- Outer Row -->
<div class="row justify-content-center">

    <div class="col-xl-10 col-lg-12 col-md-9">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                    <div class="col-lg-6">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Sử dụng tài khoản đã đăng ký để đăng nhập</h1>
                                <hr/>
                            </div>
                            <form class="user form-horizontal" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post" role="form">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                <div class="form-group">
                                    <input asp-for="UserNameOrEmail" class="form-control form-control-user"/>
                                    <span asp-validation-for="UserNameOrEmail" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <input asp-for="Password" class="form-control form-control-user"/>
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <div class="custom-control custom-checkbox small">
                                        <input class="custom-control-input" asp-for="RememberMe">
                                        <label class="custom-control-label" asp-for="RememberMe">
                                            @Html.DisplayNameFor(m => m.RememberMe)
                                        </label>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary btn-user btn-block">Đăng nhập</button>
                                </div>
                            </form>

                            <hr>
                            @{
                                var schemes = await SignInManager.GetExternalAuthenticationSchemesAsync();
                                var loginProviders = schemes.ToList();
                                if (loginProviders.Count == 0)
                                {
                                    <div>
                                        <p>
                                            Ứng dụng chưa hỗ trợ đăng nhập từ tài khoản ngoài
                                        </p>
                                    </div>
                                }
                                else
                                {
                                    <form asp-controller="Account" asp-action="ExternalLogin" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal user" role="form">
                                        <div>
                                            <p>
                                                @foreach (var provider in loginProviders)
                                                {
                                                    var btn = "";
                                                    var icon = "";
                                                    switch (provider.Name)
                                                    {
                                                        case "Facebook":
                                                            btn = "btn btn-facebook btn-user btn-block";
                                                            icon = "fab fa-facebook";
                                                            break;
                                                        case "Google":
                                                            btn = "btn btn-google btn-user btn-block";
                                                            icon = "fab fa-google";
                                                            break;
                                                    }
                                                    <button type="submit" class="@btn" name="provider" value="@provider.Name" title="Log in using your @provider.Name account">
                                                        <i class="@icon"></i> @provider.Name
                                                    </button>
                                                }
                                            </p>
                                        </div>
                                    </form>
                                }
                            }
                            <hr>
                            <div class="text-center">
                                <a class="small" asp-action="ForgotPassword">Quên mật khẩu?</a>
                            </div>
                            <div class="text-center">
                                <a class="small" asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]">
                                    Chưa có tài khoản? Đăng ký
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}