@model ASP_MVC.Areas.Identity.Models.Account.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Lấy lại mật khẩu?";
    Layout = "_LoginLayout";
}

<style>
    .bg-password-image{
    background-image: url(https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSAcQw1x-1rcSS8r90BwO2aVNp3tdg6drPghQR6lZ5Ye8T14dXhS5bKozRVO6LkAICCUVk&usqp=CAU);
    background-position: center;
    background-repeat: no-repeat;
    background-size:contain;
    background-color:white;
    }
</style>

<!-- Outer Row -->
<div class="row justify-content-center">
    <div class="col-xl-10 col-lg-12 col-md-9">
        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-6 d-none d-lg-block bg-password-image"></div>
                    <div class="col-lg-6">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-2">Quên mật khẩu?</h1>
                                <p class="mb-4">
                                    Vui lòng điền địa chỉ Email của bạn xuống phía dưới, sau đó chúng tôi sẽ
                                    gửi tới Email của bạn đường link để thay đổi mật khẩu.
                                </p>
                            </div>
                            <form class="user" method="post">
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="form-group">
                                    <input asp-for="Email" class="form-control form-control-user"/>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <button type="submit" class="btn btn-primary btn-user btn-block">Gửi</button>
                            </form>
                            <hr>
                            <div class="text-center">
                                <a class="small" asp-action="Register">Đăng ký tài khoản!</a>
                            </div>
                            <div class="text-center">
                                <a class="small" asp-action="Login">Đã có tài khoản? Đăng nhập thôi!</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}