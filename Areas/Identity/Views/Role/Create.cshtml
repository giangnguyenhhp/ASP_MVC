@model ASP_MVC.Areas.Identity.Models.Role.CreateRoleModel
@using ASP_MVC.Areas.AdminCP.Menu
@inject AdminSideBarService AdminSideBarService
@{
    ViewData["Title"] = "Tạo role mới";
    Layout = "_AdminLayout";

}
<h2>@ViewData["Title"]</h2>
<partial name="_StatusMessage"></partial>

<hr>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mt-2">
                <input type="submit" value="Tạo mới" class="btn btn-primary" />
                <a class="btn btn-primary" asp-action="Index">Danh sách các role</a>
            </div>
        </form>
    </div>
</div>

@{
    AdminSideBarService.SetActive("Identity", "Role", "Create");
}

@section Sidebar
{
    @Html.Raw(AdminSideBarService.RenderHtml())
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
