@model ASP_MVC.Models.Blog.Post
@using ASP_MVC.Areas.AdminCP.Menu
@inject AdminSideBarService AdminSideBarService
@{
    ViewData["Title"] = "Xóa bài viết";
    Layout = "_AdminLayout";

}

<h1>@ViewData["Title"]</h1>

<h3>Bạn có chắc chắn xóa không ?</h3>
<div>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10 fw-bolder">
            @Html.DisplayFor(model => model.Title)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="PostId"/>
        <input type="submit" value="Xóa" class="btn btn-danger"/> |
        <a class="btn btn-primary" asp-action="Index">Danh sách bài viết</a>
    </form>
</div>
@section Sidebar
{
    @Html.Raw(AdminSideBarService.RenderHtml())
}