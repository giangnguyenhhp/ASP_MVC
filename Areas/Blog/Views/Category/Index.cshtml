@model IEnumerable<ASP_MVC.Models.Blog.Category>

@{
    ViewData["Title"] = "Chuyên mục Blog";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a class="btn btn-primary btn-sm" asp-action="Create">Tạo chuyên mục mới</a>
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Slug)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    await RenderCategory(item,0);
}
    </tbody>
</table>
@{
   async Task RenderCategory(Category item,int level)
   {
       Enumerable.Repeat("*", level); // Mảng lặp lại level lần kí tự "*"
       var prefix = string.Concat(Enumerable.Repeat("&nbsp;&nbsp;&nbsp;&nbsp;", level));
       <tr>
           <td>
               @Html.Raw(prefix) 
               <a asp-action="Edit" asp-route-id="@item.Id">
                   @Html.DisplayFor(modelItem => item.Title)
               </a>
           </td>
           <td>
               @Html.DisplayFor(modelItem => item.Slug)
           </td>
           <td>
               <a class="btn btn-success btn-sm" asp-action="Details" asp-route-id="@item.Id">Chi tiết</a> |
               <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Xóa</a>
           </td>
       </tr>
       if (item.CategoryChildren != null && item.CategoryChildren.Count > 0)
       {
           foreach (var categoryChild in item.CategoryChildren)
           {
              await RenderCategory(categoryChild, level + 1);
           }
       }
    }
}