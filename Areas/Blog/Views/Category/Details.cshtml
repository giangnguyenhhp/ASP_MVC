@model ASP_MVC.Models.Blog.Category

@{
    ViewData["Title"] = "Nội dung chuyên mục Blog";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-4">
            Nội dung
        </dt>
        <dd class = "col-sm-8">
            @Html.Raw(Model.Description)
        </dd>
        <dt class = "col-sm-4">
            Url
        </dt>
        <dd class = "col-sm-8">
            @Html.DisplayFor(model => model.Slug)
        </dd>
    </dl>
</div>
<div>
    <a class = "btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">Chỉnh sửa</a> |
    <a class="btn btn-primary" asp-action="Index">Danh sách chuyên mục</a>
</div>
