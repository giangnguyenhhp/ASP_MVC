@model IEnumerable<ProductModel>

@{
    ViewData["Title"] = "Danh sách sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>
<partial name="_AlertMessage"/>
<p>
    <a class="btn btn-primary" asp-action="Create">Tạo Sản Phẩm Mới</a>
</p>
<p>Tổng số sản phẩm : @ViewBag.totalPosts</p>
<table class="table table-bordered">
    <thead>
    <tr class="">
        <th>
            STT
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Published)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Author)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateUpdated)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @(++ViewBag.postIndex)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProductId">
                    @Html.DisplayFor(modelItem => item.Title)
                </a>
                <br/>
                @if (item.CategoryProducts != null)
                {
                    <small>@string.Join(", ", item.CategoryProducts.Select(c => c.Title))</small>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Published)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateUpdated)
            </td>
            <td>
                <a class="btn btn-primary btn-sm" asp-action="Details" asp-route-id="@item.ProductId">Chi tiết</a> |
                <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.ProductId">Xóa</a>
            </td>
        </tr>
    }
    </tbody>
</table>

<partial name="_PagingXTL" model="@ViewBag.pagingModel"/>